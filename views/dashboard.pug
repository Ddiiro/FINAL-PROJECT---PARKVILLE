doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css')
  link(rel='stylesheet' href='/css/dashboard.css')
  title Parkville || dashboard
nav.navbar.navbar-expand-lg.navbar-dark.fixed-top
  .container-fluid
    img(width='70px' src='/images/Logo black.png' alt='')
    a.navbar-brand.fw-bold.text-uppercase.me-auto.logo(style='color:#202833;' href='#') Parkville
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon(data-bs-target='#navbarSupportedContent')
    #navbarSupportedContent.collapse.navbar-collapse
      form.d-flex.ms-auto
        .input-group.mb-3.my-3.my-lg-0
          input.form-control(style='background-color:#202833; color:#46a29f; border-radius: 5px; border: none;' type='text' placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby='button-addon2')
          button#button-addon2.btn(style='color:#202833;' type='button')
            i.bi.bi-search
      ul.navbar-nav.mb-2.mb-lg-0
        li.nav-item.dropdown
          a#navbarDropdown.nav-link.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
            i.bi.bi-person-circle(style='color:#202833;')
          ul.dropdown-menu.dropdown-menu-end(aria-labelledby='navbarDropdown')
            li
              a.dropdown-item(href='#') Account details
            li
              hr.dropdown-divider
            li
              a.dropdown-item(href='login') Log out
// --------------------------------------- dashboard---------------------------------------------
.conatiner.dashboard
  .row
    // --------------------------------------- aside ---------------------------------------------
    .col-2.aside
      h4 Dashboard
      hr
      div
        a(href='register') Register New Customer
      .dropdown.revenue
        a#dropdownMenuLink.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
          | Revenue details
        ul.dropdown-menu(aria-labelledby='dropdownMenuLink')
          li
            a.dropdown-item(href='#') Car Parking
          li
            a.dropdown-item(href='#') Car Tyres
          li
            a.dropdown-item(href='#') Car Batteries
      .dropdown
        a#dropdownMenuLink.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
          | Load Management
        ul.dropdown-menu(aria-labelledby='dropdownMenuLink')
          li
            a.dropdown-item(href='#') Car Parking
          li
            a.dropdown-item(href='#') Car Tyres
          li
            a.dropdown-item(href='#') Car Batteries
      .logout
        p
          a(href='login') Log Out
    // --------------------------------------- main ---------------------------------------------
    .col-10.main
      .container.service
        // --------------------------------------- Car parking ---------------------------------------------
        .row.parking
          .col-2
            .card.text-white.bg-success
              .card-header
                h3 Car Parking
              .card-body
                h6.card-title Ugx #{parkingPrice} /=
                p.card-text Some quick example text to build on the card title.
          .col-10
            table.table
              thead(style='color:#46a29f ;')
                tr
                  th(scope='col') #
                  th(scope='col') Name
                  th(scope='col') RecptNo.
                  th(scope='col') PhoneNo
                  th(scope='col') Time
                  th(scope='col') Date
                  th(scope='col') PlateNo
                  th(scope='col') NinNo
                  th(scope='col') Service
                  th(scope='col') Shift 
                  th(scope='col') Details 
                  th(scope='col') Duration 
                  th(scope='col') Price
              tbody
                each receipt in parkingReceipts
                    tr
                      th(scope='row')
                      td= receipt.fullName
                      td= receipt.receiptNo
                      td= receipt.phoneNo
                      td= receipt.time
                      td= receipt.date
                      td= receipt.plateNo
                      td= receipt.ninNo
                      td= receipt.service
                      td= receipt.shift
                      td= receipt.detail
                      td= receipt.duration
                      td= receipt.price
        // --------------------------------------- Car Tyres ---------------------------------------------
        .row.tyres
          .col-2
            .card.text-white.bg-danger
              .card-header
                h3 Car Tyres
              .card-body
                h6.card-title  Ugx #{tyrePrice} /=
                p.card-text Some quick example text to build on the card title.
          .col-10
            table.table
              thead(style='color:#46a29f ;')
               tr
                  th(scope='col') #
                  th(scope='col') Name
                  th(scope='col') RecptNo.
