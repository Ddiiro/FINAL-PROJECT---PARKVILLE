doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css')
  link(rel='stylesheet' href='/css/register.css')
  title Parkville || Register
img(src='/images/Logo black.png' alt='')
br
form(action='' method='POST')
  h2 Service Registration Form
  .register
    li
      label(for='') Enter Full Name
    li
      input(type='text' name='fullName' placeholder='Enter your Full Name' required='')
    li
      label(for='') Receipt Number
    li
      input(type='text' name='receiptNo' id='' placeholder='Enter valid receipt No'  value='PV0000001' required='')
    li
      label(for='') Phone Number
    li
      input(type='tel' name='phoneNo' id='' placeholder='Enter valid phone No' required='')
    .period
      div
        li
          label(for='') Time
        li
          input(style='width: 155px;' type='time' name='time' id='' required='')
      div
        li
          label(for='') Date
        li
          input(type='date' name='date' id='' required='')
    .period
      div
        li
          label(for='') Number Plate
        li
          input(style='width: 155px;' type='text' name='plateNo' id='' required='')
      div
        li
          label(for='') Nin Number
        li
          input(type='text' name='ninNo' id='' required='')
    div
      .service
        .type
          li
            label Service
          select(name='service' id='' required='')
            option(value='parking') Parking
            option(value='battery') Battery
            option(value='tyre') Tyre 
        .type
          li
            label(for='') Shift
          select(name='shift' id='' required='')
            option(value='') 
            option(value='Day') Day
            option(value='Night') Night 
      li
        input(placeholder='Service details' name ='detail' type='text' required='')
      li
        input(placeholder='Service duration' name='duration' type='text' required='')
      li
        input(placeholder='Service Price' name ='price' type='text' required='')
    button(type='submit') Submit
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
